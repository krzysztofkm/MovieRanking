@model MovieRatingApplication.Models.MovieDetailsViewModel

@{
    ViewData["Title"] = "Movie Details";
    ViewBag.MovieTitle = Model.Title;
}

<h1>@Html.DisplayFor(model => model.Title)</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EpisodId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpeningCrawl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpeningCrawl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)

        </dd>
    </dl>
</div>

<div class="row">
    <form method="post" asp-action="Rate">
        <table>
            <tr class="row">
                @for (int rate = 1; rate <= 10; rate++)
                {
                    <td class="col-sm-1">
                        <input type="radio" name="rate" value="@rate" id="rate" checked />@rate<br />
                    </td>

                }
            </tr>
        </table>
        <input type="hidden" value="@ViewBag.MovieTitle" name="movieTitle" />
        <input type="submit" value="Vote" />
    </form>
</div>

<br />

<div>
    <a asp-action="Index">Back to List</a>
</div>
